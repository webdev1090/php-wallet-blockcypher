{% extends "BlockCypherAppCommonInfrastructureLayoutBundle::base.html.twig" %}

{% block title %}Create New Wallet{% endblock title %}

{% block page_header %}
    <h1>
        <i class="fa fa-qrcode"></i>
        Create New Wallet
    </h1>

    <h2 class="tagline wrapit semi">
    </h2>
{% endblock page_header %}

{% block content %}
    <div class="container">

        <div class="section">
            <div class="col-md-12">
                <p class="text-center">
                    <a href="{{ path('bc_app_wallet_wallet.index') }}"
                       class="btn btn-lg btn-default">
                        <i class="fa fa-bank"></i>
                        Wallets
                    </a>
                    <a href="{{ path('bc_app_wallet_faucet.show') }}"
                       class="btn btn-lg btn-default">
                        <i class="fa fa-money"></i>
                        Faucet
                    </a>
                </p>
            </div>
        </div>

        <div class="col-md-12">
            {% include "BlockCypherAppWalletInfrastructureAppWalletBundle:Modules:messages.html.twig" %}
        </div>

        <div class="col-md-12">
            {% include "BlockCypherAppWalletInfrastructureAppWalletBundle:Modules:flash_messages.html.twig" %}
        </div>

        <div class="col-md-12">

            <h2></h2>

            {#{{ form_start(wallet_form) }}
            {{ form_widget(wallet_form) }}
            {{ form_end(wallet_form) }}#}

            <div class="form-well">

                {{ form_start(wallet_form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(wallet_form) }}
                <div class="form-group">
                    <label for="type" class="col-sm-2 control-label">Coin</label>

                    <div class="col-sm-10">
                        {{ form_widget(wallet_form.coinSymbol, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="tag" class="col-sm-2 control-label">Wallet Name</label>

                    <div class="col-sm-10">
                        {{ form_widget(wallet_form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Create Wallet</button>
                    <p class="help-block">
                        <small>This action uses this BlockCypher API endpoint:<a
                                    href="http://dev.blockcypher.com/#wallet_api">/v1/{coinSymbol}/{chain}/wallets</a>
                            POST
                        </small>
                    </p>
                </div>
                {{ form_end(wallet_form) }}

            </div>

        </div>
    </div>

{% endblock content %}

{% block extra_js %}
{% endblock extra_js %}