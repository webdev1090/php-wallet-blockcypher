{% extends "BlockCypherAppCommonInfrastructureLayoutBundle::base.html.twig" %}

{% block title %}Faucet{% endblock title %}

{% block page_header %}
    <h1>
        <i class="fa fa-qrcode"></i>
        Fund Address from Faucet
    </h1>

    <h2 class="tagline wrapit semi">
    </h2>
{% endblock page_header %}

{% block content %}
    <div class="container">

        <div class="section">
            <div class="col-md-12">
                <p class="text-center">
                    <a href="{{ path('bc_app_wallet_wallet.index') }}"
                       class="btn btn-lg btn-default">
                        <i class="fa fa-bank"></i>
                        Wallets
                    </a>
                    <a href="{{ path('bc_app_wallet_wallet.new') }}"
                       class="btn btn-lg btn-default">
                        <i class="fa fa-plus"></i>
                        New Wallet
                    </a>
                </p>
            </div>
        </div>

        <div class="col-md-12">
            {% include "BlockCypherAppWalletInfrastructureAppWalletBundle:Modules:messages.html.twig" %}
        </div>

        <div class="col-md-12">
            {% include "BlockCypherAppWalletInfrastructureAppWalletBundle:Modules:flash_messages.html.twig" %}
        </div>

        <div class="col-md-12">

            <h2></h2>

            <div class="form-well">

                {{ form_start(fund_address_form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(fund_address_form) }}
                <div class="form-group">
                    <label for="type" class="col-sm-2 control-label">Coin</label>

                    <div class="col-sm-10">
                        {{ form_widget(fund_address_form.coinSymbol, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="tag" class="col-sm-2 control-label">Address</label>

                    <div class="col-sm-10">
                        {{ form_widget(fund_address_form.address, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="tag" class="col-sm-2 control-label">Amount (satoshis)</label>

                    <div class="col-sm-10">
                        {{ form_widget(fund_address_form.amount, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Fund Address</button>
                    <p class="help-block">
                        <small>This action uses this BlockCypher API endpoint: <a
                                    href="https://www.blockcypher.com/dev/bitcoin/?php#testing">/v1/{coinSymbol}/{chain}/faucet</a>
                            POST
                        </small>
                    </p>
                </div>
                {{ form_end(fund_address_form) }}

            </div>

        </div>
    </div>

{% endblock content %}

{% block extra_js %}
{% endblock extra_js %}